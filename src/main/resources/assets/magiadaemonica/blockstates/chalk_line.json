{
    "multipart": [       
		{   
			"when": {"north": false, "east": false, "south": false, "west": false},
            "apply": { "model": "magiadaemonica:chalk_pile" }
        },
        {   
			"when": {"north": true},
            "apply": { "model": "magiadaemonica:chalk_north" }
        },
		{   
			"when": {"east": true},
            "apply": { "model": "magiadaemonica:chalk_east" }
        },
		{   
			"when": {"south": true},
            "apply": { "model": "magiadaemonica:chalk_south" }
        },
		{   
			"when": {"west": true},
            "apply": { "model": "magiadaemonica:chalk_west" }
        },
        {
			"when": {"candle": "unlit"},
			"apply": { "model": "magiadaemonica:scented_candle" }
        },
		{
			"when": {"candle": "lit"},
			"apply": { "model": "magiadaemonica:scented_candle_lit" }
        }
    ]
}
